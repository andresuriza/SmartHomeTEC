<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Texto que muestra el dueño actual -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dueño Actual" />

    <TextView
        android:id="@+id/currentOwnerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuario actual"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Spinner para seleccionar el nuevo dueño -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo Dueño" />

    <Spinner
        android:id="@+id/newOwnerSpinner"
        android:layout_width="match_parent"
        android:minHeight="48dp"
        android:layout_height="wrap_content" />

    <!-- Spinner para seleccionar el dispositivo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dispositivo"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/deviceSpinner"
        android:layout_width="match_parent"
        android:minHeight="48dp"
        android:layout_height="wrap_content" />

    <!-- Información del dispositivo -->
    <TextView
        android:id="@+id/deviceDetailsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Detalles del dispositivo aparecerán aquí" />

    <!-- Botón para confirmar la transferencia -->
    <Button
        android:id="@+id/transferButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Transferir Dispositivo" />
</LinearLayout>
