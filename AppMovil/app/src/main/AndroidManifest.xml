<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.samrthometec">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SamrtHomeTec">  <!-- Nota: AsegÃºrate de corregir el typo -->

        <!-- Definir MainActivity como la actividad principal (launcher) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">  <!-- MainActivity es accesible desde otras apps como actividad inicial -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Otras actividades -->
        <activity android:name=".Login" android:exported="false" />
        <activity android:name=".Registro" android:exported="false" />
    </application>

</manifest>
